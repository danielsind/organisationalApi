{{#partial "content"}}

    <h1>All News</h1>
    <br>
    <br>

    <form action="/news" method="post" >
        <div class="form-group">
            <label>Content</label>
            <input type="text" name="content" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Department Id</label>
            <input type="number"  name="departmentId" class="form-control" required>
        </div>

        <button type="submit" class="button btn-success">Submit</button>
    </form>

    <br>
    <br>

    <table>
        <tr>
            <th>Content</th>
            <th>Department Id</th>


        </tr>
        {{#each news}}
            <tr>
                <td>{{content}}</td>
                <td>{{departmentId}}</td>

            </tr>
        {{/each}}
    </table>

{{/partial}}
{{>layout.hbs}}